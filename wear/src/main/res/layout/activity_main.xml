<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/container" tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_box="all"


        >


        <Button
            android:id="@+id/sendMessageButton"

            android:layout_gravity="top|center_horizontal"


            android:textSize="12dp"
            android:text="Send Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"

            android:layout_marginTop="-5dp"

            />


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_below="@+id/sendMessageButton"
            >

        <Button
            android:id="@+id/yes"



            android:textSize="12dp"
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/sendMessageButton"

            android:layout_marginTop="44dp"
            />


        <Button
            android:id="@+id/no"


            android:textSize="12dp"
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/yes"

            android:layout_marginTop="44dp"
            />
        </LinearLayout>


        <TextView android:id="@+id/counterLabel"  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COUNTER"
            android:gravity="center"
            android:textSize="20dp"

            android:layout_marginTop="90dp"

            android:layout_below="@+id/linear"


            />

        <TextView android:id="@+id/replyLabel"  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REPLY"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="120dp"

            android:layout_below="@+id/counterLabel"



            />


    </FrameLayout>



</android.support.wearable.view.BoxInsetLayout>
